<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_sbLogo"
            android:layout_width="232dp"
            android:layout_height="152dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/starsuckslogo" />

        <TextView
            android:id="@+id/tv_OrderNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/hammersmith_one"
            android:text="@string/order_now"
            android:textColor="@color/starbucks_green"
            android:textSize="30sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_sb3"
                    android:layout_width="232dp"
                    android:layout_height="152dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/sb1" />

                <ImageView
                    android:id="@+id/img_sb4"
                    android:layout_width="232dp"
                    android:layout_height="152dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/sb2" />

                <ImageView
                    android:id="@+id/img_sb5"
                    android:layout_width="232dp"
                    android:layout_height="152dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/sb3" />

                <ImageView
                    android:id="@+id/img_sb6"
                    android:layout_width="232dp"
                    android:layout_height="152dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/sb4" />

                <ImageView
                    android:id="@+id/img_sb7"
                    android:layout_width="232dp"
                    android:layout_height="152dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/sb5" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>